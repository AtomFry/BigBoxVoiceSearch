<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="EmbeddedResources\VoiceRecognitionGif.gif" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Dependencies\" />
    <Folder Include="Deploy\LaunchBox\Plugins\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="WpfAnimatedGif" Version="2.0.2" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.Speech">
      <HintPath>Dependencies\System.Speech.dll</HintPath>
    </Reference>
    <Reference Include="Unbroken.LaunchBox.Plugins">
      <HintPath>Dependencies\Unbroken.LaunchBox.Plugins.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="EmbeddedResources\VoiceRecognitionGif.gif" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Dependencies\System.Speech.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Dependencies\WpfAnimatedGif.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="if exist &quot;$(TargetDir)BigBoxVoiceSearch.pdb&quot; xcopy &quot;$(TargetDir)BigBoxVoiceSearch.pdb&quot; &quot;C:\Users\Adam\Documents\LaunchBox\Plugins&quot; /K /D /H /Y&#xD;&#xA;if exist &quot;$(TargetDir)LaunchBox\&quot; rd /q /s &quot;$(TargetDir)LaunchBox&quot;&#xD;&#xA;xcopy &quot;$(ProjectDir)Deploy&quot; &quot;$(TargetDir)&quot; /K /D /H /Y /E&#xD;&#xA;xcopy &quot;$(TargetDir)BigBoxVoiceSearch.dll&quot; &quot;$(TargetDir)LaunchBox\Plugins&quot; /K /D /H /Y&#xD;&#xA;xcopy &quot;$(TargetDir)Dependencies\System.Speech.dll&quot; &quot;$(TargetDir)LaunchBox\Plugins&quot; /K /D /H /Y&#xD;&#xA;xcopy &quot;$(TargetDir)Dependencies\WpfAnimatedGif.dll&quot; &quot;$(TargetDir)LaunchBox\Plugins&quot; /K /D /H /Y&#xD;&#xA;xcopy &quot;$(TargetDir)\LaunchBox\&quot; &quot;C:\Users\Adam\Documents\LaunchBox\&quot; /K /D /H /Y /E" />
  </Target>

</Project>
